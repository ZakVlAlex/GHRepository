@{
    // Выход из контекста текущего пользователя
    WebSecurity.Logout();

    // Возврат на домашнюю страницу или URL-адрес возврата
    var returnUrl = Request.QueryString["ReturnUrl"];
    if (returnUrl.IsEmpty()) {
        Response.Redirect("~/");
    } else {
        Context.RedirectLocal(returnUrl);
    }
}

